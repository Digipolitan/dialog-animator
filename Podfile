workspace 'DGDialogAnimator.xcworkspace'

## Frameworks targets
abstract_target 'Frameworks' do
	use_frameworks!
	target 'DGDialogAnimator-iOS' do
		platform :ios, '8.0'
	end

	target 'DGDialogAnimator-tvOS' do
		platform :tvos, '9.0'
	end
end

## Tests targets
abstract_target 'Tests' do
	use_frameworks!
	target 'DGDialogAnimatorTests-iOS' do
		platform :ios, '8.0'
	end

	target 'DGDialogAnimatorTests-tvOS' do
		platform :tvos, '9.0'
	end
end

## Samples targets
abstract_target 'Samples' do
	use_frameworks!
	target 'DGDialogAnimatorSample-iOS' do
		project 'Samples/DGDialogAnimatorSample-iOS/DGDialogAnimatorSample-iOS'
		platform :ios, '8.0'
	end

	target 'DGDialogAnimatorSample-tvOS' do
		project 'Samples/DGDialogAnimatorSample-tvOS/DGDialogAnimatorSample-tvOS'
		platform :tvos, '9.0'
	end
end
